<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/checkbox_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/et_description_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkbox_list"
        android:layout_toLeftOf="@id/checkbox_list_basket"
        android:hint="@string/create_name_notes_text"/>


    <ImageView
        android:id="@+id/checkbox_list_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:title="Basket"/>

</RelativeLayout>